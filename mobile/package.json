{
  "name": "discreetcourie-mobile",
  "version": "1.0.0",
  "description": "DiscreetCourie Mobile Apps - Driver, Customer & Admin",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "driver": "expo start --config ./apps/driver/app.json",
    "customer": "expo start --config ./apps/customer/app.json",
    "admin": "expo start --config ./apps/admin/app.json",
    "build:driver:android": "eas build --platform android --profile production --config ./apps/driver/app.json",
    "build:driver:ios": "eas build --platform ios --profile production --config ./apps/driver/app.json",
    "build:customer:android": "eas build --platform android --profile production --config ./apps/customer/app.json",
    "build:customer:ios": "eas build --platform ios --profile production --config ./apps/customer/app.json",
    "lint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-community/geolocation": "^3.2.1",
    "@react-native-community/netinfo": "^11.2.1",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@supabase/supabase-js": "^2.39.0",
    "expo": "~50.0.0",
    "expo-camera": "~14.0.0",
    "expo-constants": "~15.4.0",
    "expo-device": "~5.9.0",
    "expo-file-system": "~16.0.0",
    "expo-image-picker": "~14.7.0",
    "expo-location": "~16.5.0",
    "expo-notifications": "~0.27.0",
    "expo-secure-store": "~12.8.0",
    "expo-status-bar": "~1.11.0",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-maps": "1.10.0",
    "react-native-reanimated": "~3.6.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-signature-canvas": "^4.7.2",
    "react-native-svg": "14.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "private": true
}
