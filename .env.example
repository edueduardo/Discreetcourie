# ============================================
# DISCREET COURIER COLUMBUS - Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================

# ============================================
# SUPABASE (Required)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# TWILIO (Optional - for SMS notifications)
# Get these from: https://console.twilio.com/
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+16145003080

# ============================================
# BLAND.AI (Optional - for AI phone assistant)
# Get these from: https://app.bland.ai/
# ============================================
BLAND_API_KEY=your_bland_api_key
BLAND_PHONE_NUMBER=your_bland_phone_number
WEBHOOK_SECRET=your_webhook_secret_for_verification

# ============================================
# GOOGLE MAPS (Optional - for address autocomplete)
# Get this from: https://console.cloud.google.com/
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# ENCRYPTION (Required for VIP features)
# Generate a random 32-character string
# ============================================
ENCRYPTION_KEY=generate_a_random_32_char_key_here

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Discreet Courier Columbus
NEXT_PUBLIC_COMPANY_PHONE=(614) 500-3080

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=eduardo@discreetcourier.com
ADMIN_PHONE=+16145550123

# ============================================
# STRIPE (Required for payments)
# Get these from: https://dashboard.stripe.com/apikeys
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# RESEND (Required for emails)
# Get this from: https://resend.com/api-keys
# ============================================
RESEND_API_KEY=re_your_resend_api_key

# ============================================
# PUSH NOTIFICATIONS (Optional)
# Generate VAPID keys using: npx web-push generate-vapid-keys
# ============================================
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ============================================
# DRIVER APP AUTHENTICATION
# Generate a secure random string for driver PIN validation
# ============================================
DRIVER_AUTH_SECRET=generate_a_secure_random_string_here

# ============================================
# NOTES:
# 1. Never commit .env.local to git
# 2. For production, set these in Vercel/deployment platform
# 3. Encryption key should be unique and kept secret
# 4. Twilio and Bland.ai are optional but recommended for full functionality
# 5. Run 'supabase/schema.sql' in Supabase SQL Editor after setup
# ============================================
